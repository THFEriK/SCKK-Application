<UserControl x:Class="SCKK_APP_2023.Views.Components.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SCKK_APP_2023.Views.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="{x:Type PasswordBox}" BasedOn="{StaticResource MaterialDesignPasswordBox}">
            <Setter Property="Margin" Value="0 10" />
            <Setter Property="FontSize" Value="18" />
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <PasswordBox x:Name="passwordBox" PasswordChanged="PasswordBox_PasswordChanged" materialDesign:HintAssist.Hint="Jelszó"/>
    </Grid>
</UserControl>
